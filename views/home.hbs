<div class="bigbox">
  <div class="row">
    <div class="row">
      <h5>
        <ol>
          <li>Choose a genre</li>
          <li>Randomise!</li>
        </ol>
      </h5>
    </div>

    <div class="row">
      <form class="randomise" action="/random" method="post">
        <select id="genreList" name="genre">
          <option value="All genres" selected>All genres</option>
            {{#each genres}}
          <option value="{{name}}">{{name}}</option>
            {{/each}}
        </select>
        <input type="submit" value="Randomise"/>
      </form>
    </div>

</div>


</div>



<div class="bigbox">
<div class="row">
  <form class="addMovie" action="/addmovie" method="post">
    <label><h5>Search for a movie: </h5></label>
      <input type="text" name="search" placeholder="Enter movie name">
    <button type="submit">Search</button>
  </form>

  <form class="addMovie" action="/addmovie" method="post">
    <input type="hidden" name="random" value="true">
    <button type="submit">Add a random movie</button>
  </form>

  <ul>
  {{#each results}}
  <form action="/addmovie" method="post">
  <li><b>{{this.original_title}}</b> <b>{{this.release_date}}</b> <button type="submit" name="addtitle" value="{{this.id}}">Add</button>
  </form>
  {{/each}}
  </ul>
</div>
</div>
