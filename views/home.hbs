
<div class="bigbox">
<div class="row">
<div class="three columns">
  <h5><ol>
    <li>Choose a genre</li>
    <li>Randomise!</li>
  </ol></h5>
</div>
<div class="nine columms">
<button type="button-primary" name="button"></button>

<form class="randomise" action="/random" method="post">
  <select id="genreList">
    <option value="All genres" selected>All genres</option>
    {{#each genres}}
    <option value="{{name}}">{{name}}</option>
    {{/each}}
  </select>
  <input type="submit" value="Randomise"/>
</form>
</div>
</div>


</div>
